<h1>Listing flags</h1>

<table>
  <tr>
    <th>Flag</th>
    <th>Comment</th>
    <th>Flaggable</th>
    <th>Flaggable type</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flags.each do |flag| %>
  <tr>
    <td><%= flag.flag %></td>
    <td><%= flag.comment %></td>
    <td><%= flag.flaggable_id %></td>
    <td><%= flag.flaggable_type %></td>
    <td><%= flag.user_id %></td>
    <td><%= link_to 'Show', flag %></td>
    <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
    <td><%= link_to 'Destroy', flag, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

