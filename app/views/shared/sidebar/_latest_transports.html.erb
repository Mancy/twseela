<% if transports.size > 0 %>
<div class="side_page_content">
  <h2 class="side_page_title"><%= t("sidebar.lastest_transports") %></h2>
  <div class="content_container">
    <ul class="side_list">
      <% transports.each do |transport|%>
      <li>
        <%= link_to image_tag(transport.user.accounts.default_one.first.my_image(:square), :title => transport.user.name, :style => "height: 48px;"), transport.user %>
        <div class="data">
          <a href="<%= transport_path(transport)%>" >
            <div><%= transport.title %></div>
            <div><%= l(transport.start_time, :format => :short) %></div>
          </a>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
